# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 40 px or 4 ppt
        bindsym k resize grow height 40 px or 4 ppt
        bindsym l resize shrink height 40 px or 4 ppt
        bindsym semicolon resize grow width 40 px or 4 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 1 ppt
        bindsym Down resize grow height 10 px or 1 ppt
        bindsym Up resize shrink height 10 px or 1 ppt
        bindsym Right resize grow width 10 px or 1 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3blocks
    position                bottom
    tray_output             primary
    separator_symbol        "  "
    workspace_buttons       yes
    strip_workspace_numbers yes

    colors {
        background  #122020
        statusline  #E0E0E0
        separator   #383c44
        # class             border  backgr. text
        focused_workspace   #50B9B2 #50B9B2 #000000
        active_workspace    #212121 #212121 #FFFFFF
        inactive_workspace  #122020 #122020 #B2D9D9
        urgent_workspace    #D64E4E #D64E4E #FFFFFF
    }
}


exec --no-startup-id ~/bin/keyboard_layout
exec --no-startup-id ~/bin/bls -w dim
exec --no-startup-id killall xfce4-notifyd
exec --no-startup-id dunst -conf .config/dunst/dunstrc

for_window [class="^.*"] border pixel 0
for_window [class="TelegramDesktop"] move container to workspace 4
for_window [class="Spotify"] move container to workspace 4
for_window [class="Google-chrome-unstable"] move container to workspace 1
for_window [class="Subl3"] move container to workspace 2
for_window [class="Atom"] move container to workspace 3
for_window [class="Peek"] floating enable

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 0 +5% && pkill -SIGRTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume 0 -5% && pkill -SIGRTMIN+10 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute 0 toggle && pkill -SIGRTMIN+10 i3blocks"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec "xbacklight -inc 10 && pkill -SIGRTMIN+14 i3blocks"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10 && pkill -SIGRTMIN+14 i3blocks"

