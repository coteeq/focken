    "apc.parts.font.family": {
        "sidebar": "\"Anka/Coder Condensed\"",
        "titlebar": "\"Anka/Coder Condensed\"",
        "activityBar": "\"Anka/Coder Condensed\"",
        "panel": "\"Anka/Coder Condensed\"",
        "tabs": "\"Anka/Coder Condensed\"",
        "statusbar": "\"Anka/Coder Condensed\"",
        "settings-body": "\"Anka/Coder Condensed\"",
        "extension-editor": "\"Anka/Coder Condensed\"",
        "monaco-menu": "\"Anka/Coder Condensed\"",
        "auxiliarybar": "\"Anka/Coder Condensed\"",
        "banner": "\"Anka/Coder Condensed\"",
    },

    "apc.font.family": "\"Anka/Coder Condensed\"",
    "apc.monospace.font.family": "\"Anka/Coder Condensed\"",

    "apc.statusBar": {
        "fontSize": 13,
    },

    "apc.stylesheet": {
        ".scm-input > .monaco-mouse-cursor-text, .scm-editor-placeholder": {
            "font-family": "\"Anka/Coder Condensed\" !important",
        }
    },

    "apc.header": {
        "height": 30, // Applied when neither "default" nor "compact" is specified
    },
    "workbench.activityBar.location": "hidden",

    "workbench.colorTheme": "Aria",
    // "workbench.colorTheme": "Cold Horizon, No Italics",
    "workbench.colorTheme": "White Winter",
    // "workbench.colorTheme": "Monochrome Dark Amplified",
    // "workbench.fontAliasing": "auto",

    "workbench.colorCustomizations": {
        "[White Winter]": {
            "list.focusHighlightForeground": "#ffffff"
        }
    },

    // "editor.semanticHighlighting.enabled": true,

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/target/debug/**": true
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "[python]": {
        "editor.wordBasedSuggestions": "off",
        "editor.rulers": [
            100
        ],
        "editor.formatOnType": true,
    },
    "files.associations": {
        "*.err": "log",
        "*.nlog": "log",
        "stderr.*": "log",
        "stderr": "log",
    },
    "editor.largeFileOptimizations": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "[markdown]": {
        "editor.rulers": [80, 120]
    },
    "[cpp]": {
        "editor.rulers": [80, 100]
    },
    "go.alternateTools": {
        "go": "/home/coteeq/.local/go/bin/go"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.bellDuration": 10,
    "terminal.integrated.localEchoExcludePrograms": [
        "vim",
        "vi",
        "nano",
        "tmux",
        "nvim"
    ],
    "terminal.integrated.defaultProfile.osx": "zsh",
    "editor.bracketPairColorization.enabled": false,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "clangd.checkUpdates": false,
    "catppuccin.italicComments": false,
    "catppuccin.italicKeywords": false,
    "remote.autoForwardPorts": false,
    "cmake.configureOnEdit": true,
    "cmake.configureSettings": {
        "CMAKE_CXX_FLAGS": "-fuse-ld=mold -Wno-unused-command-line-argument"
    },
    "flake8.args": [
        "--max-line-length=99"
    ],
    "svelte.enable-ts-plugin": true,
    "zig.zls.enabled": true,
    "zig.zls.path": "/Users/coteeq/Library/Application Support/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
    "ruff.interpreter": [
        "/usr/bin/python3"
    ],
    "ruff.lineLength": 100,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "terminal.integrated.scrollback": 3000,
    "keyboard.touchbar.enabled": false,
    "protoc": {
        "options": [
            "-I", "/home/coteeq/arc"
        ]
    },
    "remote.SSH.useExecServer": false,
    "clangd.fallbackFlags": [
        "--std=c++20"
    ],
    "vscode-yandex-arc.isThreeWayMergeEnabled": false,
    "workbench.editorLargeFileConfirmation": 5,
    "vscode-yandex-arc.doNotShowCrowdfundingMessages": true,
    "update.mode": "manual",
    "diffEditor.useInlineViewWhenSpaceIsLimited": false,
    "diffEditor.renderSideBySide": true,
    "workbench.productIconTheme": "bongocat",
    "vscode-yandex-arc.telemetryEnabled": false,
    "notebook.output.textLineLimit": 100,
}
