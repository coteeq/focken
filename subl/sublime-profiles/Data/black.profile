// Settings in here override those in "Default/Preferences.sublime-settings",
// and are overridden in turn by syntax-specific settings.
{
    "font_face": "Anka/Coder Condensed",
    // "font_face": "Uosevka Light",
    "font_size": 16,
    "font_options": [
        "gray_antialias",
        "no_italic",
    ],

    "margin": 4,
    "fold_buttons": false,
    "rulers": [100],
    "scroll_past_end": true,
    "draw_centered": true,
    "wrap_width": 80,
    "line_numbers": false,

    "translate_tabs_to_spaces": true,
    "trim_trailing_white_space_on_save": "all",
    "ensure_newline_at_eof_on_save": true,

    "caret_extra_top": 1,
    "caret_extra_bottom": 1,
    "caret_extra_width": 0,

    "word_wrap": true,

    "index_files": true,

    "theme": "Adaptive.sublime-theme",
    "color_scheme": "Alabaster Dark.sublime-color-scheme",
    "dark_color_scheme": "Horizon.sublime-color-scheme",
    "light_color_scheme": "Celeste.sublime-color-scheme",

    "ignored_packages": [
        "Vintage",
    ],
}
