{
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "**/.arc/sequencer/todo": "arcanum.interactiveRebaseEditor",
        "**/.arc/sequencer/arc-rebase-todo": "arcanum.interactiveRebaseEditor"
    },

